@model IEnumerable<InformationSystemDomain.Model.AuthorsPerArticle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArticleNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuthorsNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleNavigation.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorsNavigation.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LinkId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LinkId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LinkId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
